# Google Sheets Configuration
# For local development - use file path
GOOGLE_SERVICE_ACCOUNT_KEY_FILE=path/to/service-account-key.json
# For GitHub Actions - use the JSON content directly (set in repository secrets)
GOOGLE_SERVICE_ACCOUNT_KEY_JSON={"type":"service_account","project_id":"..."}
GOOGLE_SPREADSHEET_ID=your_google_spreadsheet_id_here

# Unique Fabrics Portal Credentials
UNIQUE_USERNAME=your_username_here
UNIQUE_PASSWORD=your_password_here

# GitHub Actions Environment Detection (set automatically)
GITHUB_ACTIONS=true

# Timezone for scheduling (default: America/New_York)
TZ=America/New_York

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Development mode (set to 'true' to run once instead of scheduling)
DEV_MODE=false

# Note: For GitHub Actions deployment, set the following as Repository Secrets:
# - UNIQUE_USERNAME
# - UNIQUE_PASSWORD  
# - GOOGLE_SPREADSHEET_ID
# - GOOGLE_SERVICE_ACCOUNT_KEY_JSON